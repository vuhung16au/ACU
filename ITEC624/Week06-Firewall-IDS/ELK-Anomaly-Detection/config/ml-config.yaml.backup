isolation_forest:
  contamination: 0.05
  n_estimators: 100
  max_samples: 256
  random_state: 42
  max_features: 1.0

autoencoder:
  architecture: [8, 16, 8, 4, 8, 16, 8]
  epochs: 50
  batch_size: 32
  learning_rate: 0.001
  validation_split: 0.2
  early_stopping_patience: 5

thresholds:
  isolation_forest: 0.4
  autoencoder_reconstruction: 0.08
  
features:
  - requests_per_minute
  - avg_response_time
  - error_rate
  - request_size_variance
  - unique_ips
  - status_code_diversity

detection:
  window_size: 60  # seconds
  min_samples: 10  # minimum samples before detection

